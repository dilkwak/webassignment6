<!DOCTYPE html>
<html lang="en" data-theme="garden">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
<title>Register</title>
<link rel="stylesheet" href="/css/main.css">
</head>
<body>
<%- include('partials/navbar') %>

<div class="container mx-auto px-6 py-6">
    <!-- Header -->
    <div class="hero bg-base-200 rounded-box mb-8">
    <div class="hero-content text-center">
        <div class="max-w-md">
        <h1 class="text-5xl font-bold">Register</h1>
        <p class="py-6">Please provide your credentials below</p>
        </div>
    </div>
    </div>

    <% const showSuccess = typeof successMessage === 'string' && successMessage.length > 0; %>

    <% if (!showSuccess) { %>
    <!-- Register Form -->
    <form class="max-w-2xl space-y-4" method="POST" action="/register">
        <label class="form-control w-full">
        <div class="label"><span class="label-text">User Name</span></div>
        <input
            type="text"
            name="userName"
            placeholder="User Name"
            class="input input-bordered w-full"
            value="<%= userName || '' %>"
            required
        />
        </label>

        <label class="form-control w-full">
        <div class="label"><span class="label-text">Password</span></div>
        <input
            type="password"
            name="password"
            placeholder="Password"
            class="input input-bordered w-full"
            required
        />
        </label>

        <label class="form-control w-full">
        <div class="label"><span class="label-text">Confirm Password</span></div>
        <input
            type="password"
            name="password2"
            placeholder="Confirm Password"
            class="input input-bordered w-full"
            required
        />
        </label>

        <label class="form-control w-full">
        <div class="label"><span class="label-text">Email Address</span></div>
        <input
            type="email"
            name="email"
            placeholder="Email Address"
            class="input input-bordered w-full"
            required
        />
        </label>

        <button type="submit" class="btn btn-primary">Register</button>
    </form>

    <% if (errorMessage) { %>
        <div class="alert alert-error mt-6">
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M10 14l2-2m0 0 2-2m-2 2-2-2m2 2V6m0 8v2" />
        </svg>
        <span><%= errorMessage %></span>
        </div>
    <% } %>

    <% } else { %>
    <!-- Success -->
    <div class="alert mt-6">
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span><%= successMessage %></span>
    </div>
    <br />
    <a href="/login" class="btn btn-success">Proceed to Log in</a>
    <% } %>
</div>
</body>
</html>
